{
  "name": "node-guardian",
  "version": "0.1.0",
  "description": "Async deadlock, memory leak, and event loop monitoring for Node.js - with AI-powered suggestions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "guardian": "./bin/guardian.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --runInBand --detectOpenHandles",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand --detectOpenHandles",
    "test:load": "jest tests/load --runInBand --detectOpenHandles --testTimeout=60000",
    "test:security": "jest tests/security --runInBand",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "node",
    "monitoring",
    "performance",
    "debugging",
    "async",
    "deadlock",
    "memory-leak",
    "event-loop",
    "nestjs",
    "profiling"
  ],
  "author": "abbas Bandar",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "ora": "^5.4.1",
    "reflect-metadata": "^0.1.13",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.26",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "semantic-release": "^22.0.12",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/node-guardian"
  }
}
